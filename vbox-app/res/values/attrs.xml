<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MetricView">
       <attr name="header" format="string" />
       <attr name="backgroundColor" format="color" />
       <attr name="gridColor" format="color"/>
       <attr name="textColor" format="color" />
       <attr name="borderColor" format="color" />
   </declare-styleable>
   
    <declare-styleable name="Panel">
       <attr name="name" format="string" />
       <attr name="headerIcon" format="reference" />
       <attr name="collapseRotation" format="integer" />
       <attr name="expanded" format="boolean"/>
   </declare-styleable>
   
    <declare-styleable name="SliderView">
       <attr name="tickSpacing" format="integer" />
       <attr name="unit" format="string" />
       <attr name="minValidValue" format="integer" />
       <attr name="maxValidValue" format="integer" />
       <attr name="minValue" format="integer" />
       <attr name="maxValue" format="integer" />
   </declare-styleable>
   
</resources>