<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="11" android:versionName="1.9.2" package="com.kedzie.vbox" >
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application  android:icon="@drawable/vbox" android:label="@string/app_name" android:name=".VBoxApplication"  android:debuggable="true">
		<activity android:label="@string/app_name" android:name=".server.ServerListActivity">
			<intent-filter>
                	<action android:name="android.intent.action.MAIN"/>
                	<category android:name="android.intent.category.LAUNCHER"/>
            	</intent-filter>
        </activity>
		<activity android:configChanges="orientation" android:label="@string/server_edit" android:name=".server.EditServerActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineListActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineTabActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineInfoActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.SnapshotActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineActivity"/>
		<activity android:configChanges="orientation" android:name=".common.MetricActivity" />
		<activity android:configChanges="orientation" android:name=".common.MetricTabActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:label="Preferences" android:name=".common.PreferencesActivity"/>
		<service android:name=".common.EventService"/>
    </application>
</manifest>
