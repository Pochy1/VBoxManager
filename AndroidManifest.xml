<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="300" android:versionName="3.0.0" package="com.kedzie.vbox">
    
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15"/>
    
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name=".VBoxApplication" android:theme="@style/Theme.Sherlock">
<!-- 		<activity android:label="Test Harness" android:name=".harness.HarnessActivity"> -->
<!-- 			<intent-filter> -->
<!--                 		<action android:name="android.intent.action.MAIN"/> -->
<!--                 		<category android:name="android.intent.category.LAUNCHER"/> -->
<!--             		</intent-filter> -->
<!--         	</activity> -->
		<activity android:configChanges="orientation" android:label="@string/app_name" android:name=".server.ServerListActivity" android:uiOptions="splitActionBarWhenNarrow">
			<intent-filter>
                	<action android:name="android.intent.action.MAIN"/>
                	<category android:name="android.intent.category.LAUNCHER"/>
            	</intent-filter>
        </activity>
        
        <activity android:configChanges="orientation" android:label="Edit VirtualBox Server" android:name=".server.EditServerActivity">
		<meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".server.ServerListActivity"/>
	</activity>
	
        <activity android:name=".machine.MachineListFragmentActivity" android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".server.ServerListActivity"/>
	</activity>
	
        <activity android:name=".machine.MachineFragmentActivity" android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".machine.MachineListFragmentActivity"/>
	</activity>
	
	<activity android:configChanges="orientation" android:label="Metrics" android:name=".metrics.MetricActivity" android:uiOptions="splitActionBarWhenNarrow"/>
	<activity android:configChanges="orientation" android:label="Preferences" android:name=".machine.PreferencesActivity"/>
	<activity android:configChanges="orientation" android:label="Preferences" android:name=".metrics.MetricPreferencesActivity"/>
	<service android:name=".event.EventIntentService"/>
	<service android:name=".event.EventNotificationService"/>
	<receiver android:name=".widget.Provider">
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget_provider"/>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
        </receiver>

        <activity android:name=".widget.ConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver android:enabled="false" android:name=".widget.WidgetBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.ACTION_TIMEZONE_CHANGED"/>
                <action android:name="android.intent.ACTION_TIME"/>
            </intent-filter>
        </receiver>	
    </application>
</manifest>