<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="11" android:versionName="1.9.2" package="com.kedzie.vbox" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:debuggable="false" android:icon="@drawable/icon" android:label="@string/app_name" android:name=".VBoxApplication" >
		<activity android:label="@string/app_name" android:name=".server.ServerListActivity">
			<intent-filter>
                	<action android:name="android.intent.action.MAIN"/>
                	<category android:name="android.intent.category.LAUNCHER"/>
            	</intent-filter>
        </activity>
		<activity android:label="@string/server_edit" android:name=".server.EditServerActivity"/>
		<activity android:configChanges="orientation" android:label="@string/machine_list" android:name=".host.MachineListActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineTabActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:configChanges="orientation" android:label="Machine Info" android:name=".machine.MachineInfoActivity"/>
		<activity android:configChanges="orientation" android:label="Snapshots" android:name=".machine.SnapshotActivity"/>
		<activity android:configChanges="orientation" android:label="@string/machine" android:name=".machine.MachineActivity"/>
		<activity android:configChanges="orientation" android:label="Metrics" android:name=".common.MetricActivity"/>
		<activity android:label="Preferences" android:name=".common.PreferencesActivity"/>
		<service android:name=".common.EventService"/>
    </application>
</manifest>