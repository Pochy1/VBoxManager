<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="12" android:versionName="2.0.0" package="com.kedzie.vbox" >
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application  android:icon="@drawable/vbox" android:label="@string/app_name" android:name=".VBoxApplication"  android:debuggable="false" >
		<activity android:label="@string/app_name" android:name=".server.ServerListActivity">
			<intent-filter>
                	<action android:name="android.intent.action.MAIN"/>
                	<category android:name="android.intent.category.LAUNCHER"/>
            	</intent-filter>
        </activity>
		<activity android:configChanges="orientation" android:label="Edit VirtualBox Server" android:name=".server.EditServerActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineListActivity"/>
		<activity android:configChanges="orientation" android:name=".machine.MachineTabActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:configChanges="orientation" android:label="Machine Details"  android:name=".machine.MachineInfoActivity"/>
		<activity android:configChanges="orientation" android:label="Snapshots" android:name=".machine.SnapshotActivity"/>
		<activity android:configChanges="orientation" android:label="Virtual Machine"  android:name=".machine.MachineActivity"/>
		<activity android:configChanges="orientation" android:label="Log File"  android:name=".machine.MachineLogActivity"/>
		<activity android:configChanges="orientation" android:label="Metrics"  android:name=".metrics.MetricActivity" />
		<activity android:label="Preferences" android:name=".PreferencesActivity"/>
		<activity android:label="Preferences" android:name=".MetricPreferencesActivity"/>
		<service android:name=".machine.EventService"/>
    </application>
</manifest>
