<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:vbox="http://schemas.android.com/apk/res/com.kedzie.vbox" 
	android:orientation="vertical" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" >
	   
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView style="@style/MediumText" android:text="@string/settings_name" android:layout_gravity="left"  />
			<EditText style="@style/SmallText" android:id="@+id/name" android:layout_weight="1" android:text="VM Name"/>
		</LinearLayout>
		
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView style="@style/MediumText" android:text="@string/settings_operating_system" android:layout_gravity="left" />
			<EditText style="@style/SmallText" android:id="@+id/ostype" android:layout_weight="1"/>
		</LinearLayout>
		
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
		    
			<TextView style="@style/MediumText" android:text="@string/settings_description" android:layout_gravity="left" />

			<EditText
			    android:id="@+id/description"
			    android:text="Machine Description"
			    style="@style/SmallText"
			    android:layout_weight="1"
			    android:inputType="textMultiLine"
			    android:gravity="start"
			    android:lines="4" />

		</LinearLayout>
		
</LinearLayout>