<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerVertical="true"  >
    
			<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"  android:padding="4dp">
						<TextView  android:id="@+id/cpu_metrics_title"  android:text="CPU Load"  android:textSize="16sp" android:textStyle="bold"  
											android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>
						<SurfaceView  android:id="@+id/cpu_metrics" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_weight="1"  />
						<TextView android:id="@+id/cpu_metrics_text"  android:text="CPU/Load/Kernel    CPU/Load/User"  android:textSize="12sp" android:textStyle="bold"  
											android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>
			</LinearLayout>	

			<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"  android:padding="4dp">
						<TextView  android:id="@+id/ram_metrics_title"  android:text="Memory Usage"  android:textSize="16sp" android:textStyle="bold"  
													android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>
						<SurfaceView   android:id="@+id/ram_metrics" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_weight="1"  />
						<TextView  android:id="@+id/ram_metrics_text"  android:text="RAM/Usage/Used"  android:textSize="12sp" android:textStyle="bold"  
												android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>
			</LinearLayout>

</LinearLayout>
