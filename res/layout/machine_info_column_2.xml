<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:vbox="http://schemas.android.com/apk/res/com.kedzie.vbox" 
	android:orientation="vertical" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:layoutAnimation="@anim/layout_animation_fade"
	android:layout_weight="1" >
	
	<com.kedzie.vbox.app.PanelView vbox:name="Audio" vbox:headerIcon="@drawable/ic_settings_audio" android:layout_width="match_parent" android:layout_height="wrap_content" >
	    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView style="@style/SmallTextPrimary" android:text="Host Driver:" android:layout_gravity="left"  />
			<TextView style="@style/SmallTextPrimary" android:id="@+id/audio_driver" android:layout_weight="1" />
		</LinearLayout>
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView style="@style/SmallTextPrimary" android:text="Controller: " android:layout_gravity="left"  />
			<TextView style="@style/SmallTextPrimary" android:id="@+id/audio_controlller" android:layout_weight="1" />
		</LinearLayout>
	</com.kedzie.vbox.app.PanelView>
		
	<com.kedzie.vbox.app.PanelView vbox:name="Network" vbox:headerIcon="@drawable/ic_settings_network" android:layout_width="match_parent" android:layout_height="wrap_content" >
	    <TextView style="@style/SmallTextPrimary"  android:id="@+id/network" android:text="Not Implemented"  android:layout_weight="1" />
	</com.kedzie.vbox.app.PanelView>
		
	<com.kedzie.vbox.app.PanelView vbox:name="USB" vbox:headerIcon="@drawable/ic_settings_system" android:layout_width="match_parent" android:layout_height="wrap_content" >
	    <TextView style="@style/SmallTextPrimary"  android:text="Not Implemented"  android:layout_weight="1" />
	</com.kedzie.vbox.app.PanelView>
		
	<com.kedzie.vbox.app.PanelView vbox:name="Description" vbox:headerIcon="@drawable/ic_settings_system" android:layout_width="match_parent" android:layout_height="wrap_content" >
		<TextView style="@style/SmallTextPrimary" android:id="@+id/description" android:layout_weight="1" />
	</com.kedzie.vbox.app.PanelView>
	
</LinearLayout>