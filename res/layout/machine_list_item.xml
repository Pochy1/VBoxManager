<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"  
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="5dp" >

	<ImageView android:id="@+id/machine_list_item_ostype" android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_marginRight="10dp"  android:src="@drawable/ic_list_os_macos"  android:layout_gravity="center_vertical"/>

	<LinearLayout  android:layout_width="wrap_content" android:layout_height="wrap_content"   android:layout_weight="1" android:orientation="vertical"  >

		<LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" >
			<TextView  android:id="@+id/machine_list_item_name" android:textSize="16sp" android:textStyle="bold"  android:layout_gravity="center_vertical"
				android:text="Machine Name" android:layout_width="wrap_content" android:layout_height="wrap_content"  />
			<TextView  android:id="@+id/machine_list_item_snapshot" android:textSize="10sp" android:textStyle="italic"  android:layout_gravity="center_vertical"
				android:text="Current Snapshot" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"  />
		</LinearLayout>
		<LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" >         
			<ImageView android:id="@+id/machine_list_item_state" android:layout_marginRight="4dp" 
				android:src="@drawable/ic_list_acpi_small"  android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView   android:id="@+id/machine_list_item_state_text" android:textSize="12sp" android:textStyle="italic"   android:layout_gravity="center_vertical"
				android:layout_width="fill_parent" android:layout_height="wrap_content"   android:layout_weight="1" android:text="Machine State"/>
		</LinearLayout>			

	</LinearLayout>

</LinearLayout>
