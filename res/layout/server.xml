<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:padding="8dp"	>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView   style="@style/MediumText"   android:text="@string/server_name" android:layout_gravity="center_vertical"  />
		<EditText android:layout_weight="1" android:id="@+id/server_name" android:text="New Server" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView   style="@style/MediumText"    android:text="@string/server_host"  android:layout_gravity="center_vertical" />
		<EditText android:layout_weight="1" android:id="@+id/server_host" android:layout_width="fill_parent" android:layout_height="wrap_content"><requestFocus/></EditText>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView   style="@style/MediumText" android:text="@string/server_ssl"  android:layout_gravity="center_vertical" />
		<CheckBox android:id="@+id/server_ssl" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    	<TextView  style="@style/MediumText"   android:text="@string/server_port" android:layout_gravity="center_vertical"/>
    	<EditText android:id="@+id/server_port"  android:layout_weight="1"  android:inputType="number" android:text="18083" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    	<TextView  style="@style/MediumText"  android:text="@string/server_username" android:layout_gravity="center_vertical"/>
    	<EditText android:id="@+id/server_username"  android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    	<TextView  style="@style/MediumText"  android:text="@string/server_password" android:layout_gravity="center_vertical"/>
    	<EditText android:id="@+id/server_password"  android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:inputType="textPassword"/>
    </LinearLayout>
    
</LinearLayout>