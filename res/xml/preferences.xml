<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory  android:title="Metrics">
        <ListPreference
                android:key="metric_count"
                android:title="@string/metric_count_title"
                android:summary="@string/metric_count_summary"
                android:entries="@array/metric_count_entities"
                android:entryValues="@array/metric_count_entity_values" />
    <ListPreference 
                android:key="metric_period"
                android:title="@string/metric_period_title"
                android:summary="@string/metric_period_summary"
                android:entries="@array/metric_period_entities"
                android:entryValues="@array/metric_period_entity_values" />
    </PreferenceCategory>
</PreferenceScreen>
