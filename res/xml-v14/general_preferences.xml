<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">
    
        <PreferenceCategory android:title="@string/pref_category_general">
            
            <SwitchPreference android:key="colored_icons"
                android:title="@string/pref_colored_icons_title"
                android:summaryOn="@string/pref_colored_icons_summary_on"
                android:summaryOff="@string/pref_colored_icons_summary_off"
                android:switchTextOn="@string/pref_colored_icons_switch_on"
                android:switchTextOff="@string/pref_colored_icons_switch_off"
                android:defaultValue="true"   />
            
            <SwitchPreference android:key="notifications"
                android:title="@string/pref_notifications_title"
                android:summaryOn="@string/pref_notifications_summary_on"
                android:summaryOff="@string/pref_notifications_summary_off"
                android:switchTextOn="@string/pref_notifications_switch_on"
                android:switchTextOff="@string/pref_notifications_switch_off"
                android:defaultValue="false"   />
                	
            <ListPreference 
                	android:key="widget_interval"
                	android:title="@string/pref_widget_interval_title"
                	android:summary="@string/pref_widget_interval_summary"
                	android:defaultValue="30000"
                	android:entries="@array/widget_interval_entries"
                	android:entryValues="@array/widget_interval_entryValues"    
                	android:dialogTitle="@string/pref_widget_interval_title" />
            
        </PreferenceCategory>
        
</PreferenceScreen>  